= form_for @stock do |f|
  -if @stock.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stock.errors.count, "error")} prohibited this stock from being saved:"
      %ul
        - @stock.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :companyname
    = f.text_field :companyname
  .field
    = f.label :companysymbol
    = f.text_field :companysymbol
  .field
    = f.label :value
    = f.text_field :value
  .field
    = f.label :delta
    = f.text_field :delta
  .actions
    = f.submit 'Save'
